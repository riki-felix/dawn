    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const audio = document.getElementById('background-audio');
        const toggleBtn = document.getElementById('audio-toggle');
        const iconOn = toggleBtn?.querySelector('.icon-audio-on');
        const iconOff = toggleBtn?.querySelector('.icon-audio-off');
        let activated = false;
      
        function updateToggleVisual(stateMuted) {
          if (toggleBtn && iconOn && iconOff) {
            iconOn.classList.toggle('hidden', stateMuted);
            iconOff.classList.toggle('hidden', !stateMuted);
            toggleBtn.setAttribute('aria-label', stateMuted ? 'Activar sonido' : 'Silenciar audio');
          }
        }
      
        function activateAudio() {
          if (!activated && audio) {
            audio.muted = false;
            audio.play().catch(() => {});
            activated = true;
            updateToggleVisual(false); // actualiza el botón visualmente
            window.removeEventListener('scroll', activateAudio);
          }
        }
      
        // Activar por scroll
        window.addEventListener('scroll', activateAudio, { once: true });
      
        // Activar/desactivar manualmente
        toggleBtn?.addEventListener('click', function () {
          if (!audio) return;
      
          const isMuted = !audio.muted;
          audio.muted = isMuted;
          updateToggleVisual(isMuted);
        });
      });
    </script>
