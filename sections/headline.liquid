{% style %}
.headline-logo-section {
	background: transparent; text-align: center; max-width: var(--page-width); margin: calc(var(--page-width-margin) - 0.8rem) auto var(--page-width-margin) auto;
}
.logo-wrapper {
	max-width: unset;
	margin: 0 0.8rem;
}
.logo-wrapper img {
	width: 100%; height: auto; object-fit: contain; display: block; margin: 0 auto;
}
 @media screen and (min-width: 1400px) {
	.logo-wrapper {
		margin: 0 auto;
	} 
 }
{% endstyle %}
<section class="headline-logo-section">
  <div class="logo-wrapper">
	{% if section.settings.custom_logo != blank %}
	  {% if section.settings.link_to_home %}
		<a href="{{ routes.root_url }}">
		  <img
			src="{{ section.settings.custom_logo | image_url }}"
			alt="{{ section.settings.custom_logo.alt | escape }}"
		  >
		</a>
	  {% else %}
		<img
		  src="{{ section.settings.custom_logo | image_url }}"
		  alt="{{ section.settings.custom_logo.alt | escape }}"
		>
	  {% endif %}
	{% else %}
	  <h1>{{ shop.name }}</h1>
	{% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Headline Logo",
  "tag": "section",
  "class": "headline-logo-section",
  "settings": [
	{
	  "type": "image_picker",
	  "id": "custom_logo",
	  "label": "Logo",
	  "info": "Sube el logotipo para esta sección. El logo predeterminado del tema no está disponible aquí."
	},
	{
	  "type": "checkbox",
	  "id": "link_to_home",
	  "label": "Enlazar el logo a la página de inicio",
	  "default": false
	}
  ],
  "presets": [
	{
	  "name": "Headline Logo"
	}
  ]
}
{% endschema %}